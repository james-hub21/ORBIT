              <SkeletonFacilityCard />
              <SkeletonFacilityCard />
              <SkeletonFacilityCard />
              <SkeletonFacilityCard />
              <SkeletonFacilityCard />
              <SkeletonFacilityCard />
            </div>
            <div className="bg-white rounded-lg shadow-sm border p-4 sm:p-6">
              <Skeleton className="h-6 w-48 mb-4" />
              <div className="space-y-3">
