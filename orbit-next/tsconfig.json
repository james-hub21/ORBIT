{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@admin": [
        "./src/app/(app)/admin/index.ts"
      ],
      "@admin/*": [
        "./src/app/(app)/admin/*"
      ],
      "@shared/*": [
        "./src/shared/*",
        "../shared/*"
      ],
      "@app-server/*": [
        "./src/server/*"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "drizzle-orm": [
        "./node_modules/drizzle-orm"
      ],
      "drizzle-orm/*": [
        "./node_modules/drizzle-orm/*"
      ],
      "drizzle-orm/pg-core": [
        "./node_modules/drizzle-orm/pg-core"
      ],
      "zod": [
        "./node_modules/zod"
      ]
    },
    "typeRoots": ["./orbit-next/node_modules/@types", "./node_modules/@types"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "../shared/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
