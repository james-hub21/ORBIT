{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node10",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "ignoreDeprecations": "6.0",
    "baseUrl": ".",
    "paths": {
      "*": ["orbit-next/node_modules/*", "*"]
    },
    "types": ["node"],
    "typeRoots": ["./orbit-next/node_modules/@types", "./node_modules/@types"]
  },
  "include": ["drizzle.config.ts", "shared/**/*.ts", "types/**/*.d.ts"]
}
